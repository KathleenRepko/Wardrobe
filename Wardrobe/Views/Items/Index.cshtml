@model IEnumerable<Wardrobe.Models.Item>

@{
    ViewBag.Title = "Items";
}

<h2>Wardrobe Items</h2>

<p>
    @Html.ActionLink("Create a New Wardrobe Item", "Create")
</p>


@* A thumbnail representing each Wardrobe Item will appear on Items Index page *@
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3">
            <div class="thumbnail">
                <div class="caption">
                    <h5>@Html.DisplayNameFor(model => model.ItemName):</h5>
                    <h4>@Html.DisplayFor(modelItem => item.ItemName)</h4>
                    <h5>@Html.DisplayNameFor(model => model.Category.CategoryName):</h5>
                    <h4>@Html.DisplayFor(modelItem => item.Category.CategoryName)</h4> 
                    <p align="center">@Html.ActionLink("Have a Look", "Details", new { id = item.ItemID }, new { @class = "btn btn-primary", role = "button" })</p>
                </div>
            </div>
        </div>
    }
</div>
