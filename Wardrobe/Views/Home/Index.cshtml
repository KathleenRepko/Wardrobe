@{
    ViewBag.Title = "Home";
}


@*Header contains web application name*@
<header class="jumbotron background">
    <div class="container-fluid row" height="400">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 jumboTitle">
            <h1>Wardrobe Wizard</h1>
            <p class="lead">Turn Fashion Faux Pas into Rounds of Applause</p>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
            <img src="~/Content/Images/armoire1.jpg" id="armoire"/>
        </div>
    </div>
</header>


@*Homepage Links Carousel*@
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <h2>What's Your Type?</h2>
            <p class="blurb">Add custom categories to SUIT your wardrobe inventory needs. </p>
            <p><a class="btn btn-default" href="~/Categories/Index">Categorize!</a></p>
        </div>
        <!--Reviews-->
        <div class="item">
            <h2>Take Stock</h2>
            <p class="blurb">Create an organized list of your wardrobe.</p>
            <br />
            <p><a class="btn btn-default" href="~/Items/Index">Inventory!</a></p>
        </div>

        <div class="item">
            <h2>Put It All Together</h2>
            <p class="blurb">Mix and match your wardrobe components - it's just like Garanimals!</p>
            <p><a class="btn btn-default" href="~/Outfits/Index">Outfit!</a></p>
        </div>
    </div>
    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
